<h1>Listing People</h1>

<table>
  <tr>
    <thead>
      <th>Name</th>
      <th>Email</th>
      <th>Bulk Action</th>
    </thead>

    <tbody>
      <% @people.each do |person| %>
        <tr>
          <td><%= person.name %></td>
          <td><%= person.email %></td>
          <td>
            <ul>
              <li><%= link_to "Show", person_url(person) %></li>
              <li><%= link_to "Edit", edit_person_url(person) %></li>
              <li><%= link_to "Delete", person_url(person) %></li>
            </ul>
          </td>
        </tr>
      <% end %>
    </tbody>
</table>

<%= link_to "New Person", new_person_url %>
