      <td><%= f.text_field :name %></td>
    </tr>

    <tr>
      <td>Email :</td>
      <td><%= f.text_field :email %></td>
    </tr>

    <tr>
      <td>&nbsp;</td>
      <td><%= f.submit %></td>
    </tr>
  </table>
<% end %>
